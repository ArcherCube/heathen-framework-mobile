{
  "compilerOptions": {
    "baseUrl": "./",
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "noEmit": true,
  },
  "include": [
    "./*"
  ],
  "exclude": [
    "node_modules"
  ]
}